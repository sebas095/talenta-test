{
  "name": "talenta-api",
  "version": "1.0.0",
  "description": "API para el juego 3 en raya",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "format": "prettier --write '{*.js,src/**/*.{js}}'",
    "lint": "eslint src/ --fix",
    "dev": "ts-node-dev --respawn --transpile-only index.ts",
    "start": "tsc && node ./build/index.js"
  },
  "keywords": [
    "javascript",
    "typescript",
    "express",
    "api",
    "rest"
  ],
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/morgan": "^1.9.1",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2",
    "ts-node-dev": "^1.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "npm run format",
      "npm run lint",
      "git add"
    ]
  },
  "author": "Sebastian Duque Restrepo <sebas_tian_95@hotmail.com>",
  "license": "ISC"
}
