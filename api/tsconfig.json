{
  "compilerOptions": {
    "paths": {
      // index path
      "@controllers": ["src/controllers"],
      "@middlewares": ["src/middlewares"],
      "@models": ["src/models"],
      "@repositories": ["src/repositories"],
      "@routes": ["src/routes"],
      "@services": ["src/services"],
      "@mocks": ["tests/mocks"],
      "@app": ["index"],

      "@config/*": ["src/config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models/*": ["src/models/*"],
      "@repositories/*": ["src/repositories/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@startup/*": ["src/startup/*"],
      "@integration/*": ["tests/integration/*"],
      "@unit/*": ["tests/unit/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
